{
  "compilerOptions": {
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "lib": [
      "es2018",
      "dom",
      "scripthost",
      "esnext.asynciterable"
    ],
    "target": "es2018",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist",
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "**/*_dnc/**/*.*",
    "**/*.tests.*"
  ]
}